{
  "format_version": "2.0",
  "base_dir": "./migrations/{workspace}",

  "repositories": [
    {
      "bitbucket_repo": "repo1",
      "github_repo": "repo1"
    },
    {
      "bitbucket_repo": "repo2",
      "github_repo": "repo2"
    }
  ],

  "bitbucket": {
    "workspace": "testworkspace",
    "email": "test@example.com",
    "token": "${BITBUCKET_TOKEN}"
  },

  "github": {
    "owner": "testorg",
    "token": "${GITHUB_TOKEN}"
  },

  "options": {
    "skip_issues": false,
    "skip_prs": false,
    "skip_pr_as_issue": false
  },

  "user_mapping": {
    "Test User": "testuser"
  }
}